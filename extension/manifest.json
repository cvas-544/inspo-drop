{
  "manifest_version": 3,
  "name": "Eagle Image Organizer",
  "version": "1.0.0",
  "description": "Drag and drop images from any website into organized folders. Inspired by Eagle App.",
  "permissions": ["storage", "activeTab", "downloads"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Eagle Image Organizer"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}